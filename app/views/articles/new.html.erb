<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4>新增災情訊息</h4>
  </div>
  <div class="panel-body">
    <%= form_for @articles ,  :url => articles_path() , :method =>'post'  do |f| %>
        <div class="form-group">
          <%= f.label :title , '標題'%>
          <%= f.text_field :title , autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content ,'內容'%>
          <%= f.text_area :content , autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :article_type_id ,'分類' %><br/>
          <%= f.select :article_type_id , @all_article_type_collection.collect {|g| [g.name , g.id] } ,{ :selected => '', include_blank: true },{class: "form-control"}%>
        </div>
        <%= f.submit t('.sign_up', :default => "新增文章"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>